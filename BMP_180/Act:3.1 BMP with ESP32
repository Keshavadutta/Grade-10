#include <Wire.h>
#include <Adafruit_BMP085.h>

Adafruit_BMP085 bmp;

void setup() {
  Serial.begin(115200);
  Wire.begin(15, 14);  // SDA = 15, SCL = 14

  if (!bmp.begin()) {
    Serial.println("BMP180 not found!");
    while (1);
  }
}

void loop() {
  Serial.print("Temp: ");
  Serial.print(bmp.readTemperature());
  Serial.println(" C");

  Serial.print("Pressure: ");
  Serial.print(bmp.readPressure() / 1000.0);
  Serial.println(" kPa");

  Serial.print("Altitude: ");
  Serial.print(bmp.readAltitude());
  Serial.println(" m");

  delay(2000);
}
